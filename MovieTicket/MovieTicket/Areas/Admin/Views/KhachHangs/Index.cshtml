@model IEnumerable<MovieTicket.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngaysinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gioitinh)
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dienthoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.matkhau)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ho) @Html.DisplayFor(modelItem => item.tenlot) @Html.DisplayFor(modelItem => item.ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ngaysinh.Day)-@Html.DisplayFor(modelItem => item.ngaysinh.Month)-@Html.DisplayFor(modelItem => item.ngaysinh.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gioitinh)
        </td>
        <td>
        @Html.DisplayFor(modelItem => item.sonha) @Html.DisplayFor(modelItem => item.tenduong), @Html.DisplayFor(modelItem => item.quan), @Html.DisplayFor(modelItem => item.thanhpho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dienthoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.matkhau)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.makhachhang }) |
            @Html.ActionLink("Details", "Details", new { id=item.makhachhang })
            <!--@Html.ActionLink("Delete", "Delete", new { id=item.makhachhang })-->
        </td>
    </tr>
}

</table>
